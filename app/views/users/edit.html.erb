<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3">
        New book
      </h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <label for="user_name">name</label>

        <%= f.text_field :name, autofocus: true, class: "form-control"%>
      </div>
      <div class="form-group">
        <label for="inputImage">image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">introduction</label>

        <%= f.text_area :introduction, class: "form-control user_introduction" %>
      </div>
      <%= f.submit 'Update User', class: "btn btn-secondary" %>

      <% end %>

    </div>
  </div>
</div>
